@page "/register-professional"
@inject IGenericProfessionalService GenericProfessionalService
@inject NavigationManager NavigationManager

<h3>Register Professional</h3>

<EditForm Model="@professional" OnValidSubmit="RegisterProfessional">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="professionalType">Professional Type</label>
        <InputText id="professionalType" class="form-control" @bind-Value="professional.ProfessionalType" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</EditForm>

@code {
    private GProfessionalDTO professional = new GProfessionalDTO();

    private async Task RegisterProfessional()
    {
        var result = await GenericProfessionalService.CreateProfessional(professional);
        if (result)
        {
            NavigationManager.NavigateTo("/");
        }
        else
        {
            // Handle registration failure (show error message, etc.)
        }
    }
}
